<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/icon_lost_back"
            android:layout_width="6dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="22dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_marginLeft="153dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="失物招领" />

    </LinearLayout>

    <View
        android:background="@color/gray_3"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/lost_info_name"
        android:textSize="16dp"
        android:text="粉色的水杯"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="捡到时间：2022-03-21"
        android:id="@+id/lost_info_location"
        android:layout_below="@+id/lost_info_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <TextView
        android:text="捡到地点：图书馆一楼"
        android:id="@+id/lost_info_time"
        android:layout_below="@+id/lost_info_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <TextView
        android:text="备注：如图"
        android:id="@+id/lost_info_remark"
        android:layout_below="@+id/lost_info_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <ImageView
        android:src="@drawable/lost_1"
        android:id="@+id/lost_info_img"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/lost_info_remark"
        android:layout_gravity="center_horizontal"
        android:layout_width="335dp"
        android:layout_height="335dp"/>

</LinearLayout>