<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/slogen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="欢迎来到图书馆!"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/search_spinner"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/background_spinner"
            android:dropDownSelector="@color/blue_light"
            android:entries="@array/search_by"
            android:spinnerMode="dropdown" />

        <EditText
            android:id="@+id/search_toolbar"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:hint="查找感兴趣的书"
            android:textColorHint="@color/gray_1"
            android:layout_height="30dp"
            android:background="@drawable/input_background"
            android:drawableStart="@drawable/icon_search"
            android:focusable="true"
            android:focusableInTouchMode="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@drawable/background_scan_code"
        android:layout_gravity="center_horizontal"
        android:layout_width="343dp"
        android:layout_height="140dp">
    </LinearLayout>


    <ImageView
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/btn_map"
        android:layout_width="343dp"
        android:layout_height="96dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="热门推荐"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="6dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/icon_vector_right" />

    </RelativeLayout>








</LinearLayout>