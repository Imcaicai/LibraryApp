<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/background_welcome"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <LinearLayout
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/search_notify"
                android:layout_width="320dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:hint="查找感兴趣的活动"
                android:textColorHint="@color/gray_1"
                android:layout_height="30dp"
                android:background="@drawable/input_background"
                android:drawableStart="@drawable/icon_search"
                android:focusable="true"
                android:focusableInTouchMode="false" />

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/filter_btn"
                android:src="@drawable/btn_filter"
                android:layout_width="20dp"
                android:layout_height="21dp"/>

        </LinearLayout>

        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/notify_0"
            android:layout_width="343dp"
            android:layout_height="156dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="热门推荐"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/more_btn"
            android:text="全部" />

        <ImageView
            android:id="@+id/more_btn"
            android:layout_width="6dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/icon_vector_right" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@drawable/notify_01"
            android:layout_width="170dp"
            android:layout_height="210dp"/>

        <ImageView
            android:layout_marginLeft="1dp"
            android:src="@drawable/notify_02"
            android:layout_width="170dp"
            android:layout_height="215dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@drawable/notify_01"
            android:layout_width="170dp"
            android:layout_height="210dp"/>

        <ImageView
            android:layout_marginLeft="1dp"
            android:src="@drawable/notify_04"
            android:layout_width="170dp"
            android:layout_height="215dp"/>
    </LinearLayout>

</LinearLayout>